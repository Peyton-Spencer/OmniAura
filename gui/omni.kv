<Page1>:
    name: 'Page1'
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        size_hint: 0.8, 1
        padding: [0,0,0,30]
        pos: 80, 0

        Label:
            text: 'Patch Selection\n       Page 1'
            size_hint: 1, 0.1

        Button: 
            id: tone_1
            text: 'tone1'
            size_hint: 1, 0.25
            on_release: root.toneSel(self.text)
        Button: 
            id: tone_2
            text: 'tone2'
            size_hint: 1, 0.25
            on_release: root.toneSel(self.text)
        Button: 
            id: tone_3
            text: 'tone3'
            size_hint: 1, 0.25
            on_release: root.toneSel(self.text)
        Button:
            id: goodbye
            text: 'tone4'
            size_hint: 1, 0.25
            on_release: root.toneSel(self.text)
    Button:
        text: '>'
        size_hint: 0.08, 0.7
        pos_hint: {'x':0.91, 'y':0.15}
        on_release: root.screenSelect('Page2')

